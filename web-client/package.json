{
    "name": "web-client",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "theme": "cd ../themes && npm run build",
        "compile": "npm run compile:worker && npm run compile:console",
        "compile:worker": "tsc src/core/engine/worker.ts --lib dom,ES2020 && uglifyjs --compress --mangle --output src/core/engine/worker.min.js -- src/core/engine/worker.js",
        "compile:console": "uglifyjs --compress --mangle --output src/core/engine/console.min.js -- src/core/engine/console.js",
        "build": "npm run theme && npm run compile && tsc && vite build",
        "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "fmt": "prettier \"./**/*.{ts,tsx,json,cjs,css,html}\""
    },
    "dependencies": {
        "@fluentui/react-components": "^9.21.0",
        "@reduxjs/toolkit": "^1.9.5",
        "clsx": "^1.2.1",
        "denque": "^2.1.0",
        "immer": "^10.0.2",
        "leaflet": "^1.9.4",
        "leaflet-arrowheads": "^1.4.0",
        "leaflet-rastercoords": "^1.0.5",
        "lru-cache": "^10.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-grid-layout": "^1.3.4",
        "react-redux": "^8.1.0",
        "redux-watch": "^1.2.0"
    },
    "devDependencies": {
        "@types/leaflet": "^1.9.3",
        "@types/leaflet-rastercoords": "^1.0.2",
        "@types/react": "^18.0.37",
        "@types/react-dom": "^18.0.11",
        "@types/react-grid-layout": "^1.3.2",
        "@types/redux-watch": "^1.1.0",
        "@typescript-eslint/eslint-plugin": "^5.59.0",
        "@typescript-eslint/parser": "^5.59.0",
        "@vitejs/plugin-react": "^4.0.0",
        "eslint": "^8.38.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.3.4",
        "prettier": "^3.0.0",
        "typescript": "^5.0.2",
        "uglify-js": "^3.17.4",
        "vite": "^4.3.9",
        "vite-tsconfig-paths": "^4.2.0"
    }
}
